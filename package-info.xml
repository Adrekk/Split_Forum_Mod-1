<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Dougiefresh:Split_Forum</id>
	<name>Split Forum Mod</name>
	<type>modification</type>
	<version>1.3</version>

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">readme.txt</readme>
		<database>db_install.php</database>
		<modification>install.xml</modification>
		<modification>language_english.xml</modification>
		<modification>language_english-utf8.xml</modification>
		<require-file name="ManageSplitForums.php" destination="$sourcedir" />
		<require-file name="Subs-ManageSplitForums.php" destination="$sourcedir" />
		<require-file name="realtabs.css" destination="$themedir/css" />
		<require-file name="ManageSplitForums.template.php" destination="$boarddir/Themes/default" />
		<require-file name="ManageSplitForums.english.php" destination="$boarddir/Themes/default/languages" />
		<require-file name="ManageSplitForums.english-utf8.php" destination="$boarddir/Themes/default/languages" />
		<require-file name="empty.png" destination="$imagesdir" />
		<redirect timeout="5000" url="index.php?action=admin;area=subforums" />
	</install>
	<uninstall for="2.0 - 2.0.99">
		<readme parsebbc="true">uninstall.txt</readme>
		<modification reverse="true">install.xml</modification>
		<modification reverse="true">language_english.xml</modification>
		<modification reverse="true">language_english-utf8.xml</modification>
		<remove-file name="$sourcedir/ManageSplitForums.php" />
		<remove-file name="$sourcedir/Subs-ManageSplitForums.php" />
		<remove-file name="$themedir/css/realtabs.css" />
		<remove-file name="$boarddir/Themes/default/ManageSplitForums.template.php" />
		<remove-file name="$boarddir/Themes/default/languages/ManageSplitForums.english.php" />
		<remove-file name="$boarddir/Themes/default/languages/ManageSplitForums.english-utf8.php" />
		<remove-file name="$imagesdir/empty.png" />
		<code>uninstall.php</code>
	</uninstall>
	
	<upgrade from="1.2">
		<readme parsebbc="true">upgrade.txt</readme>
		<database>db_upgrade_1.3_only.php</database>
		<modification>upgrade_1.3.xml</modification>
		<require-file name="ManageSplitForums.php" destination="$sourcedir" />
		<require-file name="Subs-ManageSplitForums.php" destination="$sourcedir" />
		<require-file name="ManageSplitForums.english-utf8.php" destination="$boarddir/Themes/default/languages" />
	</upgrade>
</package-info>